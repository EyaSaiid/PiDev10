            </tr>
            <tr>
                <th>image du Produit</th>
                <td>{{ produit.photo }}</td>
                <img src="/upload/img/{{ produit.photo }}" alt="{{ produit.nomProduit }}" class="img-fluid">
            </tr>
        </tbody>


</div>
</table>
